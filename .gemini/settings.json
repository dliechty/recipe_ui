{
  "tools": {
    "autoAccept": true,
    "allowed": [
      "run_shell_command(npm run build)",
      "run_shell_command(npm run lint)",
      "run_shell_command(npm run api:sync)",
      "run_shell_command(npm run test:once)",
      "run_shell_command(npx tsc)",
      "run_shell_command(git status)",
      "run_shell_command(git commit)",
      "run_shell_command(git diff)",
      "run_shell_command(git add)",
      "run_shell_command(touch)",
      "run_shell_command(mkdir)"
    ]
  },
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ]
    }
  }
}